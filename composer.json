{
  "name": "BigBrother",
  "description": "Allows the connection of Minecraft: PC clients to PocketMine-MP servers",
  "license": "LGPL-3.0",
  "authors": [
    {
      "name": "hmy2001",
      "email": "harutowii@yahoo.co.jp",
      "role": "Lead Developer"
    },
    {
      "name": "eternalharvest",
      "email": "takuya@tuntunkun.com",
      "role": "Developer"
    },
    {
      "name": "SuperMaXAleX",
      "email": "marielolo93@gmail.com",
      "role": "Developer"
    },
    {
      "name": "caspervanneck",
      "email": "wesleyvanneck1012@gmail.com",
      "role": "Developer"
    },
    {
      "name": "DrewD3V",
      "email": "ytapplegamer@gmail.com",
      "role": "Developer"
    }
  ],
  "scripts": {
    "build": [
      "@composer install --no-dev -o",
      "@php scripts/build"
    ]
  },
  "require": {
    "php": ">=7.2.0",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-zlib": "*",
    "ext-sockets": "*",
    "phpseclib/phpseclib": "2.0.17"
  },
  "require-dev": {
    "phan/phan": "^2.1.0",
    "pmmp/pocketmine-mp": "dev-master",
    "pmmp/raklib": "dev-master",
    "pmmp/spl": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "shoghicp\\BigBrother\\": ["src/shoghicp/BigBrother"]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "pocketmine\\": ["vendor/pmmp/pocketmine-mp/src/pocketmine"],
      "raklib\\": ["vendor/pmmp/raklib"],
      "": ["vendor/pmmp/spl"]
    }
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "pmmp/pocketmine-mp",
        "version": "master",
        "source": {
          "url": "https://github.com/pmmp/PocketMine-MP",
          "type": "git",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "pmmp/raklib",
        "version": "master",
        "source": {
          "url": "https://github.com/pmmp/RakLib",
          "type": "git",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "pmmp/spl",
        "version": "master",
        "source": {
          "url": "https://github.com/pmmp/PocketMine-SPL",
          "type": "git",
          "reference": "master"
        }
      }
    }
  ]
}
